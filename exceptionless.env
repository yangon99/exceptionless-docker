# Path to the Elasticsearch data directory
ES_CERT_PATH=/opt/exceptionless/elasticsearch/cert
ES_DATA_PATH=/opt/exceptionless/elasticsearch/data
ES_LOG_PATH=/opt/exceptionless/elasticsearch/log

# Password for the 'elastic' user (at least 6 characters)
ELASTIC_PASSWORD=a8hfVEcDXCieVry6a5sjEw

# Password for the 'kibana_system' user (at least 6 characters)
KIBANA_PASSWORD=c43hfaEcDXCieVry6a5sTbgv12

# Version of Elastic products
STACK_VERSION=8.14.3

# Set the cluster name of elasticsearch
ELASTIC_CLUSTER_NAME=docker-cluster

# Set to 'basic' or 'trial' to automatically start the 30-day trial
ES_LICENSE=basic

